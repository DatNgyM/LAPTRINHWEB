@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EasyTrips - Du lịch khắp Việt Nam</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <!-- Header -->
    <header>
        <div class="logo">
            <h1>EasyTrips</h1>
        </div>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="HomePage" class="active">Home</a></li>
                <li><a asp-controller="Tour" asp-action="Index">Tour</a></li>
                <li><a href="#">Destination</a></li>
                <li><a href="#">Evaluate</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
        <div class="search-icon">
            <i class="fas fa-search"></i>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h2>Let's make a tour</h2>
            <h3>Discover the beauty</h3>

            <div class="search-form">
                <div class="form-row">
                    <div class="input-group">
                        <i class="fas fa-map-marker-alt"></i>
                        <input type="text" placeholder="From where">
                    </div>
                    <div class="input-group">
                        <i class="fas fa-map-marker-alt"></i>
                        <input type="text" placeholder="To where">
                    </div>
                </div>
                <div class="form-row">
                    <div class="input-group">
                        <i class="far fa-calendar"></i>
                        <input type="text" placeholder="mm/dd/yyyy">
                    </div>
                    <div class="input-group">
                        <i class="far fa-calendar"></i>
                        <input type="text" placeholder="mm/dd/yyyy">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Flash Deals Section -->
    <section class="deals">
        <h2>Flash Deals</h2>
        <div class="carousel">
            <button class="carousel-btn prev"><i class="fas fa-chevron-left"></i></button>

            <div class="carousel-container">
                <div class="deal-card">
                    <a asp-controller="Tour" asp-action="Detail" class="tour-link">
                        <img src="/img/gioi-thieu-ve-da-lat-1.jpg" alt="Đà Lạt">
                        <div class="deal-info">
                            <h3>Đà lạt</h3>
                            <p>Time: 3-4 ngày</p>
                            <p class="price">2.990.000 VND <span class="person-icon"><i class="fas fa-user"></i></span></p>
                        </div>
                    </a>
                </div>

                <div class="deal-card">
                    <a href="tour-detail.html?tour=danang" class="tour-link">
                        <img src="/img/R.jpg" alt="Đà Nẵng">
                        <div class="deal-info">
                            <h3>Đà nẵng</h3>
                            <p>Time: 3-4 ngày</p>
                            <p class="price">6.890.000 VND/người</p>
                        </div>
                    </a>
                </div>

                <div class="deal-card">
                    <a href="tour-detail.html?tour=halong" class="tour-link">
                        <img src="/img/Vinh-Ha-Long-1-3.jpg" alt="Vịnh Hạ Long">
                        <div class="deal-info">
                            <h3>Vịnh Hạ Long</h3>
                            <p>Time: 3-4 ngày</p>
                            <p class="price">5.890.000 VND/người</p>
                        </div>
                    </a>
                </div>
            </div>

            <button class="carousel-btn next"><i class="fas fa-chevron-right"></i></button>
        </div>
    </section>

    <!-- Popular Places Section -->
    <section class="popular-places">
        <h2>Popular places</h2>
        <div class="places-grid">
            <div class="place-item large">
                <img src="/img/photo-1742300346757-a1d8f3d737ca.jpg" alt="Skyscraper">
            </div>
            <div class="place-item">
                <img src="/img/R.png" alt="Temple">
            </div>
            <div class="place-item">
                <img src="/img/pho-co-ha-noi-1698981164352290722974.png" alt="Old Quarter">
            </div>
            <!-- <div class="place-item">
                <img src="/assets/img/dn2.png" alt="Night Scene">
            </div> -->
        </div>
        <button class="see-more">Click to see more</button>
    </section>

    <!-- Popular Tour Section -->
    <section class="popular-tour">
        <h2>Popular tour</h2>
        <div class="tour-grid">
            <div class="tour-item">
                <img src="/img/unnamed.jpg" alt="River Tour">
            </div>
            <div class="tour-item">
                <img src="/img/dao-binh-lap-03.jpg" alt="Cherry Blossom">
            </div>
            <div class="tour-item">
                <img src="/img/OIP.jpg" alt="Beach View">
            </div>
            <div class="tour-item">
                <img src="/img/anh-dong-phong-nha-ke-bang-dep-ngat-ngay.jpg" alt="Sunset">
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-column">
                <h3>About Company</h3>
                <p>We're dedicated to delivering innovative solutions that empower businesses to thrive in the digital
                    age.</p>
            </div>

            <div class="footer-column">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Services</a></li>
                    <li><a href="#">Products</a></li>
                    <li><a href="#">Blog</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>

            <div class="footer-column">
                <h3>Support</h3>
                <ul>
                    <li><a href="#">Help Center</a></li>
                    <li><a href="#">Community</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms of Service</a></li>
                    <li><a href="#">Cookie Policy</a></li>
                </ul>
            </div>

            <div class="footer-column">
                <h3>Newsletter</h3>
                <p>Subscribe to our newsletter for updates, news, and exclusive offers.</p>
                <form class="newsletter-form">
                    <input type="email" placeholder="Your email">
                    <button type="submit">Subscribe</button>
                </form>
                <p class="privacy-note">By subscribing, you agree to our Privacy Policy and consent to receive updates.
                </p>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; 2025 EasyTrips. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>

</html>